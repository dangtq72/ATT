@{
    ViewBag.Title = "Thêm mới";
}
<style>
    /*độ rộng tên cột title từng trang là khác nhau nên khai báo ở trang đó luôn*/
    /*.div-search-title > div {
        width: 200px;
    }*/
</style>
<div class="divPopup">
    <div class="d-main">
        <div class="" style="padding:5px 38px 27px 38px">
            <form id="_FormRegisterRank">
                <div class="divCover">
                    <div class="div-search-col">
                        <div class="div-search-title-N">
                            <span>Mã sản phẩm*</span>
                        </div>
                        <div class="div-search-ad">
                            <div class="div-search-content">
                                <div>
                                    <input data-controlcondition="TRUE" type="text" id="txtProduct_Code" class="input_search" maxlength="250" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="div-search-col">
                        <div class="div-search-title-N">
                            <span>Tên sản phẩm*</span>
                        </div>
                        <div class="div-search-ad">
                            <div class="div-search-content">
                                <div>
                                    <input data-controlcondition="TRUE" type="text" id="txtProduct_Name" class="input_search" maxlength="250" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="div-search-col">
                        <div class="div-search-title-N">
                            <span>Mã Bravo*</span>
                        </div>
                        <div class="div-search-ad">
                            <div class="div-search-content">
                                <div>
                                    <input data-controlcondition="TRUE" type="text" id="txtBravo_Code" class="input_search" maxlength="250" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="div-search-col">
                        <div class="div-search-title-N">
                            <span>Nhóm sản phẩm*</span>
                        </div>
                        <div class="div-search-ad">
                            <div class="div-search-content">
                                <div>
                                    <select id="sl_Product_Group">
                                        <option value="0" selected="selected">--None--</option>
                                        <option value="1" selected="selected">N1</option>
                                        <option value="2" selected="selected">N2</option>
                                        <option value="3" selected="selected">N3</option>
                                        @*@foreach (Mark_Info item in m_lst)
                                            {
                                                <option value="@item.ID">@item.Mark_Name</option>
                                            }*@
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="div-search-col">
                        <div class="div-search-title-N">
                            <span>Mô tả*</span>
                        </div>
                        <div class="div-search-ad">
                            <div class="div-search-content">
                                <div>
                                    <input data-controlcondition="TRUE" type="text" id="txtContent" class="input_search" maxlength="250" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group-bottom">
                    <input type="button" class="btn-default clsRegisterStocks" value="Chấp nhận" onclick="Product_Insert();" style="margin-right:10px;" />
                    <input type="button" class="btn-default" value="Thoát" onclick="CloseDivAllStock('divViewProduct')" style="width: auto;" />
                </div>
            </form>
        </div>
    </div>
</div>