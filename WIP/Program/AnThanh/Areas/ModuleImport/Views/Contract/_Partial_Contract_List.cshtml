@using ObjInfo.Import
@using NaviCommon.Extension

@{
    List<Contract> lstContract = new List<Contract>();
    if (ViewBag.ListContract != null)
    {
        lstContract = ViewBag.ListContract;
    }
}

@try
{
    <div id="divContainTable" class="divmousewheel">
        <table id="_tableDatas" class="clsTable clsTable-border">
            <thead>
                <tr>
                    <th>STT</th>
                    <th class="class50">Đơn vị nhập hàng</th>
                    <th class="class100">Người phụ trách</th>
                    <th class="class150">Mã hợp đồng</th>
                    <th class="class150">Số hợp đồng</th>
                    <th class="class100">Ngày hợp đồng</th>
                    <th class="class100">Đ/k Thanh toán</th>
                    <th class="class100">Tình trạng thanh toán</th>
                    <th class="class100">Trạng thái hợp đồng</th>
                    <th class="class100">Chức năng</th>
                </tr>
            </thead>
            @if (lstContract.Count == 0)
            {
                <tr role="row" class="odd" style="height: 35px;">

                    <td class="tdCenterAlign" colspan="8" style="text-align: center; font-size: 18px; padding: 10px 0px 10px 0px;">
                        <p>Không có kết quả nào</p>
                    </td>
                </tr>
            }
            else
            {
                <tbody>
                    @foreach (Contract item in lstContract)
                    {
                    <tr role="row" style="height: 35px;">
                        <td class="tdLeftAlign">@item.Stt</td>
                        <td class="tdLeftAlign">@item.Import_Object</td>
                        <td class="tdLeftAlign">@item.Request_By</td>
                        <td class="tdLeftAlign">@item.Contract_Code</td>
                        <td class="tdLeftAlign">@item.Contract_Name</td>
                        <td class="tdCenterAlign">@item.Contract_Date.ToDateStringN0()</td>
                        <td class="tdLeftAlign">@item.Payment_Type</td>
                        <td class="tdLeftAlign">@item.Payment_Status_Display</td>
                        <td class="tdCenterAlign">@item.Status_Display</td>
                        <td class="tdCenterAlign" style="white-space:nowrap">
                            <a href="javascript:;" onclick="Contract_GetViewUpdate(@item.Id);">
                                <i class="fas fa-edit tooltip gray"><span class="tooltiptext">Sửa</span></i>
                            </a>&ensp;
                            <a href="javascript:;" onclick="Contract_Delete(@item.Id);">
                                <i class="fas fa-trash-alt tooltip gray"><span class="tooltiptext">Xóa</span></i>
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>

            }
        </table>
    </div>
    <div class="_ClassPage">
        <ul>
            @Html.Raw(ViewBag.Paging)
        </ul>
    </div>

}
catch (Exception)
{

}